<h1>Listing awards</h1>

<table class="minimal">
	<tr>
		<th>Cadet</th>
		<th colspan="2">Ribbon</th>
		<th colspan="3">Actions</th>
	</tr>
	<% @awards.each do |award| %>
	  <tr>
		<td><%= link_to award.cadet.name, award.cadet %></td>
		<td><%= link_to award.ribbon.name, award.ribbon %></td>
		<td><%= image_tag(award.ribbon.image_path, :size => "99x27", :alt => award.ribbon.image_path) if award.ribbon.image_path %> </td>
		<td><%= link_to 'Show', award %></td>
		<td><%= link_to 'Edit', edit_award_path(award) %></td>
		<td><%= link_to 'Destroy', award, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
</table>

<%= link_to 'New Award', new_award_path %> 

<span class="page_links" ><%=  will_paginate @awards %></span>
