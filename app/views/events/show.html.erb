<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Date:</b>
  <%= @event.date.strftime("%d %b %Y") %>
</p>

<p>
  <b>Start time:</b>
  <%= @event.start_time.strftime("%H%M") %>
</p>

<p>
  <b>End time:</b>
  <%= @event.end_time.strftime("%H%M") %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Cadet in charge:</b>
  <%= @event.cadet.name if @event.cadet %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
